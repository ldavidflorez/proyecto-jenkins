pipeline {
    agent any

    stages {
        stage('Restore') {
            steps {
                dir('WebApplication1') {
                    bat 'dotnet restore WebApplication1.sln'
                }
            }
        }

        stage('Build') {
            steps {
                dir('WebApplication1') {
                    bat 'dotnet build WebApplication1.sln --no-restore'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'No tests configured.'
            }
        }

        stage('Publish') {
            steps {
                dir('WebApplication1') {
                    bat 'dotnet publish WebApplication1/WebApplication1.csproj -c Release -o publish'
                }
            }
        }

        stage('Deploy Simulation') {
            steps {
                echo 'Simulating deployment...'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed (success or fail).'
        }
        failure {
            echo 'Something went wrong during the pipeline.'
        }
    }
}
