pipeline {
    agent any
    
    stages {
        stage('Restore') {
            steps {
                dir('WebApplication1') {
                    bat 'dotnet restore WebApplication1.sln'
                }
            }
        }

        stage('Build') {
            steps {
                dir('WebApplication1') {
                    bat 'dotnet build WebApplication1.sln --no-restore'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'No tests defined yet.'
                // Puedes descomentar esto cuando tengas pruebas:
                // dir('WebApplication1') {
                //     bat 'dotnet test WebApplication1.sln --no-build --verbosity normal'
                // }
            }
        }

        stage('Deploy Simulation') {
            steps {
                echo 'Simulating deployment...'
                echo 'Deploying application to staging environment (simulated).'
                // Aquí podrías poner un bat, curl, scp, kubectl, etc., en un escenario real
            }
        }
    }

    post {
        success {
            echo 'CI/CD pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
